#works
  .page-header
    %h1
      %small
        = t('homes.index.works-heading')
  %ul.thumbnails
    - @works.each do |work|
      %li.span3
        .thumbnail
          %a{:href=>work.picture.url, :rel => "next", :class => "img_gal", :title => work.url}
            %span.roll
            %img{:src => work.picture.url(:medium), :alt => work.description}
          %h4
            = work.url.html_safe
          %p
            = work.description.html_safe