!!!
%html
  %head
    - if I18n.locale == :ru
      %title Разработка веб-сайтов
    - else
      %title Creative website and web design development studio
    
    
    = csrf_meta_tag

    %meta{:name => "google-site-verification", :content => "OKuMj4YDTJuK53R2hk-v83MkfXThWbE6r076BJWNO_o"}

    - if I18n.locale == :ru
      %meta{:content => "Наше портфолио. nikita@gnotov.com", :name => "description"}
      %meta{:content => "веб дизайн, разработка сайта, сделать сайт", :name => "keywords"}
    - else
      %meta{:content => "Here you can find some cool examples of websites that we made.", :name => "description"}
      %meta{:content => "web design, web studio, website development", :name => "keywords"}

    :plain

      <link rel="icon" href="/assets/favicon.ico" type="image/x-icon">
      <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">

    = stylesheet_link_tag 'application', :async => true

  %body.inner
    #container
      %header
        %a#logo{:href => root_path}
        %ul.navi
          %li
            = render '/shared/languages'
          %li
            = render '/shared/header'
        .clearfix

      %section
        %article
          = yield

    = javascript_include_tag 'application', :async => true

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-36198715-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();